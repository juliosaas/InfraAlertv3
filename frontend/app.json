      "android",
      "ios",
      "web"
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "orientation": "portrait",
    "icon": "./assets/images/logoInfraAlert.png",
    "splash": {
      "image": "./assets/images/logoInfraAlert.png",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourusername.infraalert", 
      "config": {
