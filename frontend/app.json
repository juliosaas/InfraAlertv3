      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png", 
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourusername.infraalert", 
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDUDPsaGDen1k_-1-drjyUWq7207dmmGek" 
        }
      },
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION"]
